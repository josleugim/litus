.container-fluid
    .row
        .col-md-12
            filtrado
                form(name="filterForm")
                    select(name="specialityArea", ng-model="specialityArea")
                        option(value="penal") Penal
                        option(value="civil") Civil
                        option(value="administrativa") Administrativa
                        option(value="laboral") Laboral
                        option(value="fiscal") Fiscal
                        option(value="familiar") Familiar
    .row
        .col-md-12(ng-repeat="lawyer in lawyers | filter:specialityArea")
            .row
                .col-md-6
                    information
                        h5 {{lawyer.name}} {{lawyer.lastName}}
                        p {{lawyer.specialityArea}}
                        p Calificación: 0
                        form(method="post", action="https://stg.gateway.payulatam.com/ppp-web-gateway/")
                            input(type="hidden", name="merchantId", value="500238")
                            input(type="hidden", name="accountId", value="500547")
                            input(type="hidden", name="description", value="Test PAYU")
                            input(type="hidden", name="referenceCode", value="TestPayU")
                            input(type="hidden", name="amount", value="3")
                            input(type="hidden", name="tax", value="0")
                            input(type="hidden", name="taxReturnBase", value="0")
                            input(type="hidden", name="currency", value="USD")
                            input(type="hidden", name="signature", value="be2f083cb3391c84fdf5fd6176801278")
                            input(type="hidden", name="test", value="1")
                            input(type="hidden", name="buyerEmail", value="test@test.com")
                            input(name="responseUrl", type="hidden", value="localhost:5000/api/payu")
                            input(name="confirmationUrl", type="hidden", value="http://www.test.com/confirmation")
                            input(type="submit", name="submit", value="Agendar cita")
                .col-md-6
                    informacion
                        p Descripción:
                        p {{lawyer.description}}
