.container-fluid.chat
    .row
        .col-md-6
            ul.list-group
                li.list-group-item(ng-repeat="user in users")
                    div.row
                        div.col-md-2
                            img.media-object(data-src="holder.js/64x64",src="data:image/svg+xml;base64,",data-holder-rendered="true",style="width: 64px; height: 64px;")
                        div.col-md-8
                            h3 {{user.completeName}}
                        div.col-md-2
                            a(href="/chat/{{user.chat_id}}") 
                                <i class="mdi mdi-login"></i> Chat
                li.list-group-item(ng-if="users.length==0")
                    div.row
                        div.col-md-12
                            h3 No hay Chat's disponibles
